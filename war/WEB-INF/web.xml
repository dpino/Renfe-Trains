<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>trains.igalia.com.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/trains/greet</url-pattern>
  </servlet-mapping>

  <servlet>
	  <servlet-name>sign</servlet-name>
	  <servlet-class>trains.igalia.com.guestbook.SignGuestbookServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	  <servlet-name>sign</servlet-name>
	  <url-pattern>/trains/sign</url-pattern>
  </servlet-mapping>

  <servlet>
	  <servlet-name>trains</servlet-name>
	  <servlet-class>trains.igalia.com.servlet.TrainsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	  <servlet-name>trains</servlet-name>
	  <url-pattern>/trains/trains</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <!-- <welcome-file>Trains.html</welcome-file> -->
	<welcome-file>guestbook.jsp</welcome-file>
  </welcome-file-list>

</web-app>
